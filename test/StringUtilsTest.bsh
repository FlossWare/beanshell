/**
 * Test the StringUtils class.
 */
StringUtilsTest() {
    import junit.framework.Assert;

    stringUtils = StringUtils();

    void test_isBlank() {
        Assert.assertTrue("Should be blank", stringUtils.isBlank(null));
        Assert.assertTrue("Should be blank", stringUtils.isBlank(""));
        Assert.assertTrue("Should be blank", stringUtils.isBlank("  "));
        Assert.assertTrue("Should be blank", stringUtils.isBlank("          "));

        Assert.assertFalse("Should not be blank", stringUtils.isBlank("hello world"));
        Assert.assertTrue("Should be blank", stringUtils.isBlank("hello world"));
    }

    void test_ensure_String_String_null(IllegalArgumentException e) {
        stringUtils.ensure(null, "Foo");
    }

    void test_ensure_String_String_blank(IllegalArgumentException e) {
        stringUtils.ensure("    ", "Foo");
    }

    void test_ensure_String_String_empty(IllegalArgumentException e) {
        stringUtils.ensure("", "Foo");
    }

    void test_ensure_String_null(IllegalArgumentException e) {
        stringUtils.ensure(null);
    }

    void test_ensure_String_blank(IllegalArgumentException e) {
        stringUtils.ensure("    ");
    }

    void test_ensure_String_empty(IllegalArgumentException e) {
        stringUtils.ensure("");
    }

    return this;
}