/**
 * Test the XPathUtils class.
 */
XPathUtilsTest() {
    import junit.framework.Assert;
    import javax.xml.xpath.XPath;

    xpathUtils = XPathUtils();

    /**
     * Test creating an XPath.
     */
    void test_createXPath() {
        Assert.assertNotNull("Should have create an XPath blank", xpathUtils.createXPath());
    }

    void test_evaluate_XPath_String_InputStream() {
        XPath xpath = xpathUtils.createXPath();

        Assert.assertEquals("Should be correct value", "Joe", xpathUtils.evaluate(xpath, "/persons/person[1]/first", getResource("/foo.xml").openStream()).trim());
        Assert.assertEquals("Should be correct value", "Blow", xpathUtils.evaluate(xpath, "/persons/person[1]/last", getResource("/foo.xml").openStream()).trim());
        Assert.assertEquals("Should be correct value", "John", xpathUtils.evaluate(xpath, "/persons/person[2]/first", getResource("/foo.xml").openStream()).trim());
        Assert.assertEquals("Should be correct value", "Does", xpathUtils.evaluate(xpath, "/persons/person[2]/last", getResource("/foo.xml").openStream()).trim());
    }

    return this;
}