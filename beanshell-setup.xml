<project name="beanshell-setup" xmlns:ant-unit="antlib:org.apache.ant.antunit" xlmns:ant-conrib="http://ant-contrib.sourceforge.net">

    <!-- =========================================================================================== -->

    <property name="flossware.beanshell.HOME"     file="${ant.file.beanshell-setup}"/>
    <property name="flossware.beanshell.lib.HOME" file="${flossware.beanshell.HOME}/lib"/>
    <property name="flossware.beanshell.bsh.HOME" file="${flossware.beanshell.HOME}/bsh"/>

    <!-- =========================================================================================== -->

    <property name="antcontrib.jar"    value="${flossware.beanshell.lib.HOME}/ant-contrib-1.0b3.jar"/>
    <property name="antunit.jar"       value="${flossware.beanshell.lib.HOME}/ant-antunit-1.3.jar"/>
    <property name="beanscripting.jar" value="${flossware.beanshell.lib.HOME}/bsf-2.4.0.jar"/>
    <property name="beanshell.jar"     value="${flossware.beanshell.lib.HOME}/bsh-2.0b6.jar"/>

    <!-- =========================================================================================== -->

    <taskdef resource="net/sf/antcontrib/antlib.xml" uri="http://ant-contrib.sourceforge.net" description="Needed to use ant-contrib." >
        <classpath>
            <fileset file="${antcontrib.jar}"/>
        </classpath>
    </taskdef>

    <!-- =========================================================================================== -->

    <path id="flossware.beanshell.lib.PATH">
        <filelist dir="${flossware.beanshell.lib.HOME}">
            <file name="${beanscripting.jar}"/>
            <file name="${beanshell.jar}"/>
        </filelist>
    </path>

    <!-- =========================================================================================== -->

</project>